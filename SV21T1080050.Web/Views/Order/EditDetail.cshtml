@model OrderDetail
@{
    Layout = null;
}

<div class="modal-dialog">
    <div class="modal-content">
        <form action="~/Order/UpdateDetail" method="post" class="form-horizontal" id="formDetail">
            <input type="hidden" name="@nameof(Model.OrderID)" value="@Model.OrderID" />
            <input type="hidden" name="@nameof(Model.ProductID)" value="@Model.ProductID" />

            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cập nhật chi tiết đơn hàng</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label class="control-label col-sm-3">Tên mặt hàng:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.ProductName</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Đơn vị tính:</label>
                    <div class="col-sm-9">
                        <p class="form-control-static">@Model.Unit</p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Số lượng:</label>
                    <div class="col-sm-9">
                        <input type="number" class="form-control" name="@nameof(Model.Quantity)" value="@Model.Quantity" />
                        @Html.ValidationMessage(nameof(Model.Quantity), new { @style = "color:#f00" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Giá bán:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control number-separator" name="@nameof(Model.SalePrice)" value="@Model.SalePrice" />
                        @Html.ValidationMessage(nameof(Model.SalePrice), new { @style = "color:#f00" })

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i> Cập nhật
                </button>
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Bỏ qua
                </button>
            </div>
        </form>
    </div>
</div>


    <script>

    $("#formDetail").validate({
        rules: {
            Quantity: {
                required: true,
                min: 1
            },
            SalePrice: {
                required: true,
                min: 0
            }
        },
        messages: {
            Quantity: {
                required: "Vui lòng nhập số lượng",
                min: "Số lượng phải lớn hơn hoặc bằng 1"
            },
            SalePrice: {
                required: "Vui lòng nhập giá bán",
                min: "Giá bán phải lớn hơn hoặc bằng 0"
            }
        }
    });
    </script>
    <style>
    .error { color:red; }
    </style>


